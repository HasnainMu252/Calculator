    <solid android:color="#616A9D" /> <!-- Replace with your desired color -->

    <!-- Define rounded corners with a specific radius -->
    <corners android:radius="250dp" /> <!-- Set your preferred corner radius here -->

    <!-- Optional: Add padding around the shape -->
